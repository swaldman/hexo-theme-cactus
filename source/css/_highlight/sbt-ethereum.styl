.highlight, pre /* code.hljs */
  background: #223
  color: white

  .plain
    color: #4f4

  .name, .strong
    font-weight: bold

  .emphasis
    font-style: italic

  .tag
    color: #62c8f3

  .variable, .template-variable, .selector-id, .selector-class
    color: #ade5fc

  .string, .bullet
    color: #a2fca2

  .title
    font-weight: bold
    color: white

  .number, .symbol, .bullet
    color: #d36363

  .keyword, .selector-tag, .literal
    color: #fcc28c
    font-weight: normal

  .title .keyword
    font-style: italic
    color: yellow

  .params .keyword
    color: #fcf

  .comment, .deletion
    color: #aff

  .regexp, .link
    color: #c6b4f0

  .meta
    color: #bbb

  .meta .keyword
    color: #bbb

  .deletion
    background-color: #fc9b9b
    color: #333

  .addition
    background-color: #a2fca2
    color: #333

  .highlight a
    color: inherit

  .highlight a:focus, .highlight a:hover
    color: inherit
    text-decoration: underline

